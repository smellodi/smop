<Window x:Class="Smop.MainApp.Dialogs.GoogleDriveFilePicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Smop.MainApp.Dialogs"
        xmlns:conv="clr-namespace:Smop.MainApp.Utils"
        mc:Ignorable="d"
        DataContext="{Binding Mode=OneWay, RelativeSource={RelativeSource Self}}"
        Title="Load DMS target from Google Drive"
        WindowStyle="ToolWindow"
        Icon="/Assets/icons/main.png"
        Height="350"
        Width="470"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <conv:ObjectToBoolConverter x:Key="Object2Bool"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="230"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0">DMS records</Label>
        <Label Grid.Row="0" Grid.Column="1">Description</Label>

        <ListView x:Name="lsvFiles" Grid.Row="1" Grid.Column="0"
                  ItemsSource="{Binding Files}"
                  SelectedItem="{Binding SelectedFile, Mode=TwoWay}"
                  Margin="4"
                  SelectionChanged="Files_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" Margin="5"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Label x:Name="lblDmsInfo" Grid.Row="1" Grid.Column="1"
               Margin="4"/>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2"
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button Content="Select"
                    Width="75"
                    Margin="4"
                    IsDefault="True"
                    IsEnabled="{Binding SelectedItem, ElementName=lsvFiles, Converter={StaticResource Object2Bool}}"
                    Click="Select_Click"/>
            <Button Content="Cancel"
                    Width="75"
                    Margin="4"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
