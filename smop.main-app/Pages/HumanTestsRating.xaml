<Page x:Class="Smop.MainApp.Pages.HumanTestRating"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:utils="clr-namespace:Smop.MainApp.Utils"
      xmlns:local="clr-namespace:Smop.MainApp.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="746" d:DesignWidth="800"
      Title="Pulse"
      Focusable="True"
      KeyDown="Page_KeyDown"
      Loaded="Page_Loaded"
      Unloaded="Page_Unloaded">

    <Page.Resources>
        <utils:BoolToVisibilityConverter x:Key="bool2vis"/>
        <sys:Boolean x:Key="inverted">True</sys:Boolean>

        <Style x:Key="Header" TargetType="Label">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="0,12,0,0"/>
            <Setter Property="Foreground" Value="{StaticResource BrushFontDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>
        <Style x:Key="Stage" TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource BrushFontDark}"/>
            <Setter Property="Padding" Value="0,8,0,4"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="sctScale"/>
        </Grid.LayoutTransform>

        <TextBlock Grid.Row="0" Style="{StaticResource PageTitle}"
            Text="Rating"/>

        <Grid Grid.Row="1"
              Visibility="{Binding IsInstruction, Converter={StaticResource bool2vis}, ConverterParameter={StaticResource inverted}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        VerticalAlignment="Center">
                <Label x:Name="lblInfo"
                       Content="{Binding StageInfo}"
                       HorizontalAlignment="Center"/>
                <local:WaitingInstruction x:Name="wtiWaiting"
                                          Margin="24,12"
                                          Height="60"
                                          Width="200"
                                          VerticalContentAlignment="Bottom"
                                          Text="Wait"/>

                <Button IsEnabled="{Binding CanReleaseOdor}"
                        Width="126"
                        Content="Release"
                        Click="ReleaseOdor_Click"/>
            </StackPanel>

            <Grid x:Name="grdRatingButtons" Grid.Row="1"
                  Width="600"
                  Height="320">
                <Grid.Resources>
                    <Style x:Key="Rating" TargetType="{x:Type ToggleButton}" BasedOn="{StaticResource {x:Type ToggleButton}}">
                        <Setter Property="Margin" Value="8"/>
                        <Setter Property="Background" Value="#FF00A000"/>
                        <Setter Property="Foreground" Value="#FFFFFFFF"/>
                        <Setter Property="BorderBrush" Value="#FF004000"/>
                        <Style.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#FF004000"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <ToggleButton Grid.Row="0" Grid.Column="0"
                        Style="{StaticResource Rating}"
                        Content="biting"
                        Click="RatingButton_Click"/>
                <ToggleButton Grid.Row="0" Grid.Column="1"
                        Style="{StaticResource Rating}"
                        Content="flowery"
                        Click="RatingButton_Click"/>
                <ToggleButton Grid.Row="0" Grid.Column="2"
                        Style="{StaticResource Rating}"
                        Content="deodorized"
                        Click="RatingButton_Click"/>
                <ToggleButton Grid.Row="0" Grid.Column="3"
                        Style="{StaticResource Rating}"
                        Content="subtle"
                        Click="RatingButton_Click"/>

                <ToggleButton Grid.Row="1" Grid.Column="0"
                        Style="{StaticResource Rating}"
                        Content="foul"
                        Click="RatingButton_Click"/>
                <ToggleButton Grid.Row="1" Grid.Column="1"
                        Style="{StaticResource Rating}"
                        Content="fresh"
                        Click="RatingButton_Click"/>
                <ToggleButton Grid.Row="1" Grid.Column="2"
                        Style="{StaticResource Rating}"
                        Content="damp"
                        Click="RatingButton_Click"/>
                <ToggleButton Grid.Row="1" Grid.Column="3"
                        Style="{StaticResource Rating}"
                        Content="individual"
                        Click="RatingButton_Click"/>

                <ToggleButton Grid.Row="2" Grid.Column="0"
                        Style="{StaticResource Rating}"
                        Content="clean"
                        Click="RatingButton_Click"/>
                <ToggleButton Grid.Row="2" Grid.Column="1"
                        Style="{StaticResource Rating}"
                        Content="cold"
                        Click="RatingButton_Click"/>
                <ToggleButton Grid.Row="2" Grid.Column="2"
                        Style="{StaticResource Rating}"
                        Content="musty"
                        Click="RatingButton_Click"/>
                <ToggleButton Grid.Row="2" Grid.Column="3"
                        Style="{StaticResource Rating}"
                        Content="natural"
                        Click="RatingButton_Click"/>

                <ToggleButton Grid.Row="3" Grid.Column="0"
                        Style="{StaticResource Rating}"
                        Content="neutral"
                        Click="RatingButton_Click"/>
                <ToggleButton Grid.Row="3" Grid.Column="1"
                        Style="{StaticResource Rating}"
                        Content="pungent"
                        Click="RatingButton_Click"/>
                <ToggleButton Grid.Row="3" Grid.Column="2"
                        Style="{StaticResource Rating}"
                        Content="salty"
                        Click="RatingButton_Click"/>
                <ToggleButton Grid.Row="3" Grid.Column="3"
                        Style="{StaticResource Rating}"
                        Content="sour"
                        Click="RatingButton_Click"/>

                <ToggleButton Grid.Row="4" Grid.Column="0"
                        Style="{StaticResource Rating}"
                        Content="sweaty"
                        Click="RatingButton_Click"/>
                <ToggleButton Grid.Row="4" Grid.Column="1"
                        Style="{StaticResource Rating}"
                        Content="strong"
                        Click="RatingButton_Click"/>
                <ToggleButton Grid.Row="4" Grid.Column="2"
                        Style="{StaticResource Rating}"
                        Content="smelly"
                        Click="RatingButton_Click"/>
                <ToggleButton Grid.Row="4" Grid.Column="3"
                        Style="{StaticResource Rating}"
                        Content="sweet"
                        Click="RatingButton_Click"/>

                <ToggleButton Grid.Row="5" Grid.Column="1"
                        Style="{StaticResource Rating}"
                        Content="unpleasant"
                        Click="RatingButton_Click"/>
                <ToggleButton Grid.Row="5" Grid.Column="2"
                        Style="{StaticResource Rating}"
                        Content="warm"
                        Click="RatingButton_Click"/>
            </Grid>

        </Grid>

        <TextBlock Grid.Row="1"
                   Visibility="{Binding IsInstruction, Converter={StaticResource bool2vis}}"
                   FontSize="20"
                   MaxWidth="600"
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   VerticalAlignment="Center">
            Sniff an odor as many times as needed, select the words that describe the odor and then press “Submit” button
        </TextBlock>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button x:Name="btnSubmit"
                    Style="{StaticResource Next}"
                    IsEnabled="{Binding CanSubmit}"
                    Content="{Binding SubmitButtonText}"
                    Click="Submit_Click"/>
        </StackPanel>

        <Label x:Name="lblZoom" Style="{StaticResource ZoomIndicator}"/>
        <Label x:Name="lblDebug" Style="{StaticResource DebugWarning}" Visibility="Collapsed"/>
    </Grid>
</Page>
